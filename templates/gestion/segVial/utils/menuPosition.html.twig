<style>
    #map_canvas {
            width:780px;
            height:480px;
          }
</style>


{% if classLt is not defined %}
    {% set classLt = 'col-lg-2' %}
{% endif %}

{% if classLg is not defined %}
    {% set classLg = 'col-lg-2' %}
{% endif %}

<div class='{{ classLt }} col-sm-12'>
    {{ form_label(form.latitud) }}
    {{ form_widget(form.latitud, { 'attr' : {'class' : 'form-control form-control-sm positionLt'  }}) }}
    <div class="text-danger">{{ form_errors(form.latitud) }}</div>
</div>
<div class='{{ classLg }} col-sm-12'>
    {{ form_label(form.longitud) }}
    {{ form_widget(form.longitud, { 'attr' : {'class' : 'form-control form-control-sm positionLn' }}) }}
    <div class="text-danger">{{ form_errors(form.longitud) }}</div>
</div>	
<div class=' col-lg-1 col-sm-1 mt-4'>
	<a data-toggle="modal" data-target="#myModal"><i class="far fa-map mt-3"></i></a>
</div>
  <div class="modal" id="myModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Seleccionar coordenadas</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div id="map_canvas">

        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
        </div>
        
      </div>
    </div>
  </div>

  <script type="text/javascript">
  </script>

