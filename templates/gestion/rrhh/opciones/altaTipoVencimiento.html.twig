{% extends 'base.html.twig' %}

{% block content %}
    <div class="h4 mt-5">{{ label }} Tipo Vencimiento</div>
    <hr>
    {% include '@Gestion/messages.html.twig'  %}
    {{ form_start(form, {'attr' : {'novalidate' : 'novalidate', 'class' : 'border border-light'}}) }} 
	    <div class='form-row mt-2 ml-4 mr-2'>	 
	    	<div class=' col-lg-5 col-sm-12'>
			    {{ form_label(form.tipo) }}
			    {{ form_widget(form.tipo, { 'attr' : {'class' : 'form-control'}}) }}
			    <div class="text-danger">{{ form_errors(form.tipo) }}</div>
			</div>   
		</div>

		<div class='form-row ml-4 mr-2 mt-2'>
			{{ form_widget(form.guardar, { 'attr' : {'class' : 'btn danger-color-dark text-white'}}) }}
		</div>
    
    {{ form_end(form) }}
    {% if edit is not defined %}
	    <hr>
		<table class="table table-hover table-bordered table-striped table-sm">
		  <thead>
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Tipo Vencimiento</th>
		      <th scope="col"></th>
		    </tr>
		  </thead>
		  <tbody>
		  	{% for t in tipos %}
		  		<tr>
		  			<td>{{ loop.index }}</td>
		  			<td>{{ t|upper }}</td>
		  			<td class="text-center">
		  					<a href="" class="btn btn-sm danger-color-dark text-white">Editar</a>
		  			</td>
		  		</tr>
		  	{% endfor %}
		  </tbody>
		</table>
	{% endif %}
{% endblock %}

{% block javascripts %}

<script type="text/javascript">

</script>
{% endblock %}

