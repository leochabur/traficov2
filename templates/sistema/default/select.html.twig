{% extends 'base.html.twig' %}
{% set show_nav = false %}
{% block content %}
<style>
        body {
            background: #E0DBDB;
        }
        .user_card {
            height: 75%;
            width: 1050px;
            margin-bottom: auto;
            background: gray;
            position: relative;

            justify-content: center;
            flex-direction: column;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 5px;

        }
        .brand_logo_container {
            position: absolute;
            height: 120px;
            width: 120px;
            top: -40px;

            background: white;
            padding: 10px;
            text-align: center;
        }
        .brand_logo {
            height: 100px;
            width: 100px;

            border: 2px solid white;
        }
        .form_container {

        }

        .str_card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 15px;
            background: #c0392b;

        }

</style>

    <div class="pt-5 mt-5">
        <div class="d-flex justify-content-center">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="{{ asset('resources/img/favicon-masterbus-150x150.png') }}" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="form_container mt-5 pt-5">
                  <hr>
                  <p class="mt-5"></p>
                      {% set count = 0 %}

                      <div class="row pl-1">
                      {%  for str in app.user.estructuras %}

                        {% if count == 4 %}
                          </div>
                          <div class="row mt-5 pl-1">
                          {% set count = 0 %}
                        {% endif %}
                        <div class="col-3 pl-1 pr-1">
                          <div class="card col-11 pt-2 pb-2 str_card">
                            <p class="font-weight-light">{{ str }}</p>
                            <a class="btn btn-sm red lighten-1 text-white waves-effect" href="{{ path('redirect_to_index', {str : str.id }) }}">Ingresar</a>
                          </div>
                        </div>
                        {% set count = count + 1 %}
                      {% endfor %}
                      </div>
                      <div class="row mt-2">
                          <div class="col-lg-12 text-right">
                            <a href="{{ path('logout') }}" class="btn btn-sm bt-danger">Salir</a>
                          </div>
                      </div>
                </div>
            </div>
        </div>
    </div>









