<script type="text/javascript">
  $('.view-module').click(function(event){
        event.preventDefault();
        var mod = $(this);
        $.post("{{ path('set_session_menu') }}",
               {module : mod.data('module')},
               function(data){
                              window.location.href = data.route;
               });
  });
</script>

